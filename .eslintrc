{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true,
            "jsx": true
        }
    },
    "env": {
        "browser": true
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "react-native/split-platform-components": 2,
        "no-undef": 0,
        "react/jsx-no-undef": 2,
        "semi": 2,
        "comma-spacing": 2,
        "no-duplicate-imports": 2,
        "react/jsx-indent": [2, 2],
        "indent": [2, 2],
        "no-console": 2,
        "object-shorthand": 2,
        "spaced-comment": 2,
        "no-trailing-spaces": 2,
        "quotes": [2, "single"]
    }
}